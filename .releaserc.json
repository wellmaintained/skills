{
  "branches": [
    "main"
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "src/beads-bridge/dist/beads-bridge-linux-x64",
            "label": "beads-bridge-linux-x64"
          },
          {
            "path": "src/beads-bridge/dist/beads-bridge-darwin-arm64",
            "label": "beads-bridge-darwin-arm64"
          },
          {
            "path": "src/beads-bridge/dist/beads-bridge-darwin-x64",
            "label": "beads-bridge-darwin-x64"
          },
          {
            "path": "src/beads-bridge/dist/beads-bridge-win32-x64.exe",
            "label": "beads-bridge-win32-x64.exe"
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "package.json",
          "package-lock.json",
          "plugins/*/skills/*/package.json",
          "src/*/package.json",
          ".claude-plugin/marketplace.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
