{
  "name": "beads-bridge",
  "version": "0.1.1",
  "description": "Claude skill that bridges Beads issue tracking with project management tools (GitHub Projects, Shortcut, etc.)",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "beads-bridge": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-frontend",
    "copy-frontend": "rm -rf dist/frontend && mkdir -p dist/frontend && rsync -a src/frontend/ dist/frontend/",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src tests --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "beads",
    "github-projects",
    "project-management",
    "claude-skill",
    "issue-tracking"
  ],
  "author": "mrdavidlaing",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@shortcut/client": "^1.1.0",
    "@types/express": "^4.17.21",
    "commander": "^14.0.2",
    "express": "^4.18.2",
    "octokit": "^3.2.2",
    "zod": "^3.22.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
